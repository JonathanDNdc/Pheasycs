<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:srcCompat="@drawable/one" />

        <Spinner
            android:id="@+id/spinnerkin1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/kin_vel"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/editVel1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:ems="10"
            android:inputType="numberSigned|numberDecimal" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/kin_invel"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/editInvel1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:ems="10"
            android:inputType="numberSigned|numberDecimal" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/kin_acel"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/editAcel1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:ems="10"
            android:inputType="numberSigned|numberDecimal" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/kin_time"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/editTime1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:ems="10"
            android:inputType="numberSigned|numberDecimal" />

        <Button
            android:id="@+id/kin1btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/calculate"
            android:textSize="18sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>